<div class="container">
  <div class="search-results">

    <div class="filter-search">
      <div class="filter-option header">
        <h2>Filter Search</h2>
      </div>

      <%= form_tag videos_path, method: :get do %>
        <div class="filter-option">
          <div class="form-group">
            <label for="Duration">Search</label>
            <p>
            <%= text_field_tag :search, params[:search], :class => 'search-field' %>
            </p>
          </div>
        </div>

        <div class="filter-option">
          <div class="form-group">
            <label for="Duration">Duration</label>
            <p>
            <%= text_field_tag :duration, params[:duration], :class => 'search-field'%>
            </p>
          </div>
        </div>

        <div class="filter-option button">
          <%= submit_tag "Search", :name => nil, :class => 'green-button' %>
        </div>
      <% end %>
    </div>

    <div class="results">
      <h1>Results</h1>
      <div class="each-result">
        <div class="row">
          <% @videos.each do |video| %>
            <div class="col-xs-12 col-sm-6">
              <%= link_to video_path(video) do %>
                <div class="card">
                <div class="video"> <%= cl_video_tag(video.video.file.public_id, :width=>310, :crop=>"scale", autoplay: false) %></div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
