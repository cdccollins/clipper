<div class="container">
  <div class="video-title-info">
    <h1><%= @video.title %></h1>
    <h4><%= @video.user.first_name + " " + @video.user.last_name %></h4>
  </div>

  <div class="main-video">
    <div class="video video-sh"><%= cl_video_tag(@video.cloudinary_url, :crop=>"scale", controls: true, controlsList: "nodownload") %></div>
    <div class="video-footer text-center">

      <div class="video-footer-links">
        <%= link_to user_path(@video.user_id) do %>
          <%= image_tag "ssaunier.jpeg", id: "seb", :class => 'avatar'%>
        <% end %>
        <%= link_to edit_video_path(@video) do %>
          <i class="fas fa-download"></i>
        <% end %>
      </div>

      <p><%= @video.description %></p>
    </div>
  </div>

 <div class="video-link">
    <div class="red-button"><%= link_to "Edit video", edit_video_path(@video) %>
    </div>
  </div>
</div>
